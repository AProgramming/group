@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{

    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Hello @User.Identity.GetUserName() <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>
                    <a href="#"><i class="fa fa-fw fa-envelope"></i> صندوق پیام ها</a>
                </li>
                <li>
                    @Html.ActionLink("Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "fa fa-fw fa-gear" })

                </li>
                <li class="divider"></li>
                <li>
                    <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-fw fa-power-off"></i> خروج</a>
                </li>
            </ul>
        </li>
    }
}
else
{
    <li class="dropdown">
        @Html.ActionLink("  ثبت نام ", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "dropdown-toggle fa fa-user" })
    </li>
    <li class="dropdown">
        @Html.ActionLink("  ورود  ", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "dropdown-toggle fa fa-user" })
    </li>
}

