@model IEnumerable<group.Models.News>

@{
    ViewBag.Title = "NewsDetail";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model)
{
    using (Html.BeginForm("DeleteNews", "Admin", new { id = item.Id }))
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descr)
        </td>
        <td>
            <img src="@Url.Content(item.Image)" width="50" height="50" />
        </td>

        <td>
            @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) |
            <input class="btn btn-danger" type="submit" value="حذف" onclick="return confirm('از حذف @item.Id مطمئن هستید؟')" />
        </td>
    </tr>
    }
}

</table>
