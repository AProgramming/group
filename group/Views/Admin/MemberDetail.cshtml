@model IEnumerable<group.Models.Member>

@{
    ViewBag.Title = "MemberDetail";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="hidden-xs hidden-sm">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th class="hidden-xs hidden-sm">
            @Html.DisplayNameFor(model => model.Twitter)
        </th>
        <th class="hidden-xs hidden-sm">
            @Html.DisplayNameFor(model => model.Instagram)
        </th>
        <th class="hidden-xs hidden-sm">
            @Html.DisplayNameFor(model => model.Facebook)
        </th>
        <th class="hidden-xs hidden-sm">
            @Html.DisplayNameFor(model => model.linkedin)
        </th>
        <th class="hidden-xs hidden-sm">
            @Html.DisplayNameFor(model => model.Dribble)
        </th>
        <th class="hidden-xs hidden-sm">
            @Html.DisplayNameFor(model => model.Telegram)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th class="hidden-xs hidden-sm">
            @Html.DisplayNameFor(model => model.Bio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{

    using (Html.BeginForm("DeleteMember", "Admin", new { id = item.Id }))
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td class="hidden-xs hidden-sm">
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td class="hidden-xs hidden-sm">
            @Html.DisplayFor(modelItem => item.Twitter)
        </td>
        <td class="hidden-xs hidden-sm">
            @Html.DisplayFor(modelItem => item.Instagram)
        </td>
        <td class="hidden-xs hidden-sm">
            @Html.DisplayFor(modelItem => item.Facebook)
        </td>
        <td class="hidden-xs hidden-sm">
            @Html.DisplayFor(modelItem => item.linkedin)
        </td>
        <td class="hidden-xs hidden-sm">
            @Html.DisplayFor(modelItem => item.Dribble)
        </td>
        <td class="hidden-xs hidden-sm">
            @Html.DisplayFor(modelItem => item.Telegram)
        </td>
        <td>
            <img src="@Url.Content(item.Image)" width="50" height="50" />

        </td>
        <td class="hidden-xs hidden-sm">
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }
}

</table>
